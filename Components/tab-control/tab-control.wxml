<!--Components/tab-control/tab-control.wxml-->
<view class="tab-control">
  <block wx:for="{{titles}}" wx:key="index">
    <view class="tab-item {{currentIndex == index ? 'active': ''}}" 
          bind:tap="tabclick" 
          data-index="{{index}}"
          data-item="{{item}}">
      <text class="text">{{item}}</text>
    </view>
  </block>
</view>