<!--components/tab-control/tab-control.wxml-->
<view class="tab-control">
  <block wx:for="{{title}}" wx:key="index">
    <view class="tab-item {{currentIndex == index ? 'active': ''}}"
          bind:tap="itemclick"
          data-index="{{index}}">
      <text class="tab-text">{{item}}</text>
    </view>
  </block>
</view>